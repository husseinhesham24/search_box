<h1 class="text-center mt-4">Analytics & Trends</h1>
<div class="container">
  <% @searches.each do |query, count| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title text-success"><%= query %></h5>
          </div>
          <div class="card-footer text-muted">
            <large>
              Searched <%= count %> times
            </large>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>

